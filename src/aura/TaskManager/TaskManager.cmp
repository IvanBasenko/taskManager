<aura:component description="TaskManager"
                implements="lightning:actionOverride,force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction"
                access="global">
    <aura:attribute name="recordId" type="Id"/>
    <aura:attribute name="record" type="Sprint__c"/>
    <aura:attribute name="status" type="String"/>
    <aura:attribute name="fields" type="String[]" default="['Status__c']"/>
    <aura:handler name="addToSprint" event="c:AddToSprintEvt" action="{!c.toSprint}"/>
    <!--<force:recordData fields="{!v.fields}"-->
    <!--recordId="{!v.recordId}"-->
    <!--targetFields="{!v.record}"-->
    <!--recordUpdated="{!c.getStatus}"/>-->
    <div class="slds-grid slds-gutters">
        <div class="slds-col">
            <c:BackLog aura:id="backLogList" projectSprint="{!v.recordId}"/>
        </div>
        <div class="slds-col">
            <c:Sprint aura:id="sprintList" projectSprint="{!v.recordId}"/>
        </div>
    </div>
</aura:component>